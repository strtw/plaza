generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String?  @unique // Optional
  firstName String?
  lastName  String?
  phoneHash String   @unique // Hashed phone number for contact matching (HMAC-SHA256)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // User's contacts where they are the initiator
  contacts  Contact[] @relation("UserContacts")
  // Contacts where this user is the contact
  contactOf Contact[] @relation("ContactUser")

  statuses       Status[]
  invitesCreated Invite[] @relation("InviteCreator")
  invitesUsed    Invite[] @relation("InviteUser")
  appContacts AppContact[] @relation("UserAppContacts")
  appContactsAsPlazaUser AppContact[] @relation("AppContactPlazaUser")

  @@index([phoneHash])
}

model Contact {
  id            String        @id @default(uuid())
  userId        String
  contactUserId String
  status        ContactStatus @default(ACTIVE)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user        User @relation("UserContacts", fields: [userId], references: [id], onDelete: Cascade)
  contactUser User @relation("ContactUser", fields: [contactUserId], references: [id], onDelete: Cascade)

  @@unique([userId, contactUserId])
  @@index([userId])
  @@index([contactUserId])
}

enum ContactStatus {
  ACTIVE
  BLOCKED
}

model Status {
  id        String             @id @default(uuid())
  userId    String
  status    AvailabilityStatus
  message   String?
  startTime DateTime
  endTime   DateTime
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([startTime, endTime])
}

enum AvailabilityStatus {
  AVAILABLE // Green
  QUESTIONABLE // Yellow
  UNAVAILABLE // Red
}

model Invite {
  id        String    @id @default(uuid())
  code      String    @unique
  inviterId String
  usedById  String?
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  inviter User  @relation("InviteCreator", fields: [inviterId], references: [id], onDelete: Cascade)
  usedBy  User? @relation("InviteUser", fields: [usedById], references: [id])

  @@index([code])
  @@index([inviterId])
}

model AppContact {
  id        String   @id @default(uuid())
  userId    String   // User who selected this contact
  phoneHash String   // Hashed phone number
  name      String   // Name from device contacts
  plazaUserId String? // If this contact is a Plaza user, link to User
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User  @relation("UserAppContacts", fields: [userId], references: [id], onDelete: Cascade)
  plazaUser User? @relation("AppContactPlazaUser", fields: [plazaUserId], references: [id], onDelete: SetNull)

  @@unique([userId, phoneHash])
  @@index([userId])
  @@index([phoneHash])
  @@index([plazaUserId])
}
